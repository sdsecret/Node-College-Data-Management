<style>
    .bd-placeholder-img {
      font-size: 1.125rem;
      text-anchor: middle;
      -webkit-user-select: none;
      -moz-user-select: none;
      user-select: none;
    }

    @media (min-width: 768px) {
      .bd-placeholder-img-lg {
        font-size: 3.5rem;
      }
    }
  </style>  


  <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
      <h1 class="h2">Student</h1>
      <div class="btn-toolbar mb-2 mb-md-0">
        <button type="button" class="btn btn-sm btn-outline-dark shadow-sm"><i class="fa-solid fa-file-excel"></i> Export</button>
        <button type="button" onclick="location.href='/student-create'" class="btn btn-sm btn-outline-success shadow-sm"><i class="fa-solid fa-circle-plus"></i> Add Student</button>
      </div>
    </div>

    <div id="messageBox">

    </div>

    <!-- <div class="table-responsive"> -->

      <div class="row">
        <% if(messages.success){ %>
          <div class="alert alert-success mt-4 border-0 shadow-sm alert-dismissible fade show" role="alert">
           <ul class="list-group" style="list-style: none;">
              <li style="font-weight: bold;" class="text-success"><%= messages.success %></li>
           </ul>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% } %>
        <div class="col-md-12">
          <div class="card p-2 shadow-sm border-0">
            <table class="table table-hover" id="Datatable">
              <thead>
                <th>#</th>
                <th>Name</th>
                <th>Profile Picture</th>
                <th>Stream</th>
                <th>Semester</th>
                <th>Session</th>
                <th>Email</th>
                <th>Roll</th>
                <th>Phone</th>
                <th>Address</th>
                <th>Created At</th>
                <th width="10%">Action</th>
              </thead>
              <tbody>

                <% students.forEach((student,index) => { %>
                    <tr>
                        <td><%= index+1 %></td>
                        <td><%= student.name %></td>
                        <td>
                            <img src="/students/<%= student.profile_pic %>" alt="<%= student.name %>" class="rounded-circle" width="50" height="50" style="object-fit: cover;">
                        </td>
                        <td><%= student.Stream.stream_name %></td>
                        <td><%= student.semester %></td>
                        <td><%= student.session %></td>
                        <td><%= student.email %></td>
                        <td><%= student.roll %></td>
                        <td><%= student.phone %></td>
                        <td><%= student.address %></td>
                        <td><%= student.createdAt %></td>
                        <td width="10%">
                            <a href="" class="btn btn-sm btn-outline-warning shadow-sm"> <span data-feather="edit"></span></a>
                            <a href="" class="btn btn-sm btn-outline-danger shadow-sm"> <span data-feather="trash"></span></a>
                        </td>
                    </tr>
                <% }) %> 
  
              </tbody>
            </table>
          </div>
        </div>

      </div>

    <!-- </div> -->
  </main>

  <script>
    $(document).ready(function() {
      $('#Datatable').DataTable({
        order: [[0, 'asc']]
      });
    });
  </script>